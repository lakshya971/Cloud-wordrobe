# Website Monitoring Configuration
# Add these to your .env.local file

# Pushover (Mobile Push Notifications) - https://pushover.net/
PUSHOVER_TOKEN=your_pushover_app_token_here
PUSHOVER_USER=your_pushover_user_key_here

# Twilio (SMS Notifications) - https://twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+1234567890

# Discord Webhook (Team Notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# General webhook for other services
WEBHOOK_URL=your_custom_webhook_url_here
